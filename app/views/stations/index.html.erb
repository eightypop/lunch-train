<h1>Stations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><h3><%= station.name %></h3></td>
        <td>
          <span>No thanks</span>
          <input class="ratingUpdates" data-station="<%= station.id %>" type="range" value="<%= station.rating || 0 %>" min="-50" max="50" step="1"/>
          <span>Yes please!</span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Station', new_station_path %>
